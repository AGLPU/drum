<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bacgorund"
    tools:context=".activities.SplashActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Experience World Most amazing Music simulation Application"
        android:layout_gravity="center"

        android:layout_marginTop="30dp"
        android:textStyle="italic|bold"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Piano"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"/>
    <ImageView
        android:id="@+id/pianoImageVw"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_height="200dp"
        android:src="@drawable/splash"
        android:background="@drawable/border"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"

        android:layout_marginTop="10dp"
        app:layout_constraintVertical_bias="0.447" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Drum"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"/>
    <ImageView
        android:id="@+id/drumImageVw"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"

        android:src="@drawable/drumx"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        app:layout_constraintVertical_bias="0.447" />
    <LinearLayout
        android:id="@+id/banner_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
      />


</LinearLayout>